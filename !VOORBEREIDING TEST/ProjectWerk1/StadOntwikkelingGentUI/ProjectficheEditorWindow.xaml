<Window x:Class="StadontwikkelingGentUI.ProjectficheEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projectfiche" Height="627" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Projectfiche" FontSize="20" Margin="10,10,0,10"/>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Naam:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Startdatum:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Beschrijving:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Straatnaam:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Huisnummer:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Gemeente:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Provincie:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Wijk:" VerticalAlignment="Center" Margin="5"/>

            <TextBox x:Name="TextBoxNaam" Grid.Row="0" Grid.Column="1" Margin="5"/>
            <DatePicker x:Name="DatePickerStartDatum" Grid.Row="1" Grid.Column="1" Margin="5"/>
            <ComboBox x:Name="ComboBoxStatus" Grid.Row="2" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="TextBoxBeschrijving" Grid.Row="3" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="TextBoxStraatnaam" Grid.Row="4" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="TextBoxHuisnummer" Grid.Row="5" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="TextBoxGemeente" Grid.Row="6" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="TextBoxProvincie" Grid.Row="7" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="TextBoxWijk" Grid.Row="8" Grid.Column="1" Margin="5"/>
        </Grid>

        <TabControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,265,10,39" Grid.RowSpan="3">

            <TabItem Header="Stadsontwikkeling">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="172.58"/>
                        <ColumnDefinition Width="19.966"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Status vergunning:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Heeft architecturale waarde:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Toegankelijkheid:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Is bezienswaardig:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Heeft uitlegbord of infowandeling:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>

                    <ComboBox x:Name="ComboBoxStatusVergunning" Grid.Row="0" Grid.Column="2" Margin="5,5,5,5"/>
                    <CheckBox Name="CheckBoxArchitecturalewaarde" Grid.Row="1" Grid.Column="2" Margin="5"/>
                    <ComboBox Name="ComboBoxToegankelijkheid" Grid.Row="2" Grid.Column="2" Margin="5"/>
                    <CheckBox Name="CheckBoxIsBezienswaardig" Grid.Row="3" Grid.Column="2" Margin="5"/>
                    <CheckBox Name="CheckBoxUitlegBord" Grid.Row="4" Grid.Column="2" Margin="5"/>
                </Grid>
            </TabItem>

            <TabItem Header="Innovatief Wonen">
                <Grid Margin="10,0,10,0" Height="182">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Aantal wooneenheden:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Type woonvormen:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Is rondleiding mogelijk:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Is showwoning beschikbaar:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Architecturale score:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Heeft samenwerking Erfgoed of Toerisme Gent:" VerticalAlignment="Center" Margin="5"/>

                    <TextBox x:Name="TextBoxAantalWooneenheden" Grid.Row="0" Grid.Column="1" Margin="5" />
                    <Button x:Name="ButtonTypeWoonvormen" Grid.Row="1" Grid.Column="1" Margin="5" Content="Kies woonvorm(en)..." Click="ButtonTypeWoonvormen_Click"/>
                    <CheckBox x:Name="CheckBoxRondleiding" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    <CheckBox x:Name="CheckBoxShowwoning" Grid.Row="3" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="TextBoxArchitecturaleScore" Grid.Row="4" Grid.Column="1" Margin="5"/>
                    <CheckBox x:Name="CheckBoxSamenwerkingErfgoed" Grid.Row="5" Grid.Column="1" Margin="5"/>
                </Grid>
            </TabItem>

            <TabItem Header="Groene Ruimte">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Oppervlakte (m²):" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Biodiversiteitsscore:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Aantal wandelpaden:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Beschikbare faciliteiten:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Is opgenomen in wandelroute:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Beoordeling bezoekers:" VerticalAlignment="Center" Margin="5"/>

                    <TextBox x:Name="TextBoxOppervlakte" Grid.Row="0" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="TextBoxBiodiversiteit" Grid.Row="1" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="TextBoxAantalWandelpaden" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    <Button x:Name="ButtonBeschikbareFaciliteiten" Grid.Row="3" Grid.Column="1" Margin="5" Content="Kies faciliteit(en)..." Click="ButtonBeschikbareFaciliteiten_Click"/>
                    <CheckBox x:Name="CheckBoxWandelroute" Grid.Row="4" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="TextBoxBeoordelingBezoekers" Grid.Row="5" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                </Grid>
            </TabItem>

        </TabControl>

        <Button Grid.Row="3" Name="ButtonPasAan" Content="Pas Aan" FontSize="15" Margin="39,50,420,4" Click="ButtonPasAan_Click" Grid.Column="1"/>
        <Button Grid.Row="3" Name="ButtonVoegPartnerToe" Content="Voeg Partner toe" FontSize="15" Margin="286,50,166,4" Grid.Column="1" Click="ButtonVoegPartnerToe_Click"/>
    </Grid>
</Window>
