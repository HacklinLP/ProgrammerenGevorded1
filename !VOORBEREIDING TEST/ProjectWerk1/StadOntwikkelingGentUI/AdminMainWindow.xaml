<Window x:Class="StadontwikkelingGentUI.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadontwikkelingGentUI"
        mc:Ignorable="d"
        Title="Mijn Projecten" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="307*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Sorteer op..." Margin="551,11,175,9"/>
        <ComboBox Margin="630,7,19,5" Name="ComboBoxFilter">
            <!-- TODO: checkboxes in dropdown -> "eventueel als uitbreiding moeten ze ook kunnen gesorteerd worden" -->
        </ComboBox>

        <TextBlock Grid.Row="0" Text="Mijn Projecten" FontSize="20" Margin="10,4,563,2"/>
        <DataGrid Grid.Row="1" Name="DataGridProjecten" Margin="5,5,5,1" SelectionMode="Single" IsReadOnly="True" Grid.RowSpan="1"/>

        <Button Grid.Row="2" Name="ButtonPasAan" Content="Pas Project aan" FontSize="15" Margin="39,35,611,28" Click="ButtonPasAan_Click"/>
        <Button Grid.Row="2" Name="ButtonVoegToe" Content="Voeg Project toe" FontSize="15" Margin="231,35,419,28" Click="ButtonVoegToe_Click"/>
        <Button Grid.Row="2" Name="ButtonProjectfiche" Content="Toon Projectfiche" FontSize="15" Margin="423,35,227,28" Click="ButtonProjectFiche_Click"/>
        <Button Grid.Row="2" Name="ButtonVerwijder" Content="Verwijder Project" FontSize="15" Margin="614,35,36,28" RenderTransformOrigin="0.365,0.603" Click="ButtonVerwijder_Click" />
    </Grid>
</Window>
