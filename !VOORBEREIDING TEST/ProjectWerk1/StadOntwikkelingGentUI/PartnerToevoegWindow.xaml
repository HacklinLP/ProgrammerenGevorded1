<Window x:Class="StadontwikkelingGentUI.PartnerToevoegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadontwikkelingGentUI"
        mc:Ignorable="d"
        Title="Partner Toevoegen" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" Text="Bestaande Partners"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Margin="5" Text="Mijn Project Partners"/>

        <ListBox Grid.Row="1" Grid.Column="0" Margin="5" Name="ListBoxBestaandePartners" SelectionMode="Extended"/>
        <ListBox Grid.Row="1" Grid.Column="2" Margin="5" Name="ListBoxMijnProjectPartners" SelectionMode="Extended"/>

        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <Button Content="&gt;" Margin="5" Click="ButtonAddSelected_Click"/>
            <Button Content="&lt;" Margin="5" Click="ButtonRemoveSelected_Click"/>
        </StackPanel>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Content="Selecteer" Margin="220,5,220,5" Click="Button_Click"/> <!-- TODO: add click event -->
    </Grid>
</Window>
