        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="307*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Sorteer op..." Margin="556,11,175,9"/>
        <ComboBox Margin="630,7,19,5" Name="ComboBoxFilter">
            <!-- TODO: checkboxes in dropdown -> "eventueel als uitbreiding moeten ze ook kunnen gesorteerd worden" -->
        </ComboBox>

        <TextBlock Grid.Row="0" Text="Alle Projecten" FontSize="20" Margin="10,4,0,0"/>
        <DataGrid Grid.Row="1" Name="DataGridAlleProjecten" Margin="5,5,5,1" SelectionMode="Single" IsReadOnly="True" Grid.RowSpan="1"/>
    </Grid>
</Window>
