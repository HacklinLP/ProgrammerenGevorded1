        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadontwikkelingGentUI"
        mc:Ignorable="d"
        Title="Alle Projecten" Height="450" Width="800">
    <!-- TODO: zorg ervoor dat vorig venster niet sluit wanneer we dit venster openen -->
