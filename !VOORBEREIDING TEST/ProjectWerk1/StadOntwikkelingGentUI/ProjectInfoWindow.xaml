<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="StadontwikkelingGentUI.ProjectInfoWindow"
        Title="Projectfiche" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Projectfiche" FontSize="20" Margin="10,10,0,10"/>

        <!-- General Project Info -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Naam:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Startdatum:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Beschrijving:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Straatnaam:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Huisnummer:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Gemeente:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Provincie:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Wijk:" VerticalAlignment="Center" Margin="5"/>

            <TextBox x:Name="TextBoxNaam" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <DatePicker x:Name="DatePickerStartDatum" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <TextBox x:Name="TextBoxStatus" Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <TextBox x:Name="TextBoxBeschrijving" Grid.Row="3" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <TextBox x:Name="TextBoxStraatnaam" Grid.Row="4" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <TextBox x:Name="TextBoxHuisnummer" Grid.Row="5" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <TextBox x:Name="TextBoxGemeente" Grid.Row="6" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <TextBox x:Name="TextBoxProvincie" Grid.Row="7" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            <TextBox x:Name="TextBoxWijk" Grid.Row="8" Grid.Column="1" Margin="5" IsReadOnly="True"/>
        </Grid>

        <!-- TabControl for different sections -->
        <TabControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,10,10,60" Grid.RowSpan="2">

            <!-- Stadsontwikkeling -->
            <TabItem Header="Stadsontwikkeling">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="172.58"/>
                        <ColumnDefinition Width="19.966"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Status vergunning:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Heeft architecturale waarde:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Toegankelijkheid:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Is bezienswaardig:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Heeft uitlegbord of infowandeling:" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>

                    <TextBox x:Name="TextBoxStatusVergunning" Grid.Row="0" Grid.Column="2" Margin="5,5,5,5" IsReadOnly="True"/>
                    <CheckBox Name="CheckBoxArchitecturalewaarde" Grid.Row="1" Grid.Column="2" Margin="5"/>
                    <TextBox Name="TextBoxToegankelijkheid" Grid.Row="2" Grid.Column="2" Margin="5" IsReadOnly="True"/>
                    <CheckBox Name="CheckBoxIsBezienswaardig" Grid.Row="3" Grid.Column="2" Margin="5"/>
                    <CheckBox Name="CheckBoxUitlegBord" Grid.Row="4" Grid.Column="2" Margin="5"/>
                </Grid>
            </TabItem>

            <!-- Innovatief Wonen -->
            <TabItem Header="Innovatief Wonen">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Aantal wooneenheden:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Is rondleiding mogelijk:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Is showwoning beschikbaar:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Architecturale score:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Heeft samenwerking Erfgoed of Toerisme Gent:" VerticalAlignment="Center" Margin="5"/>

                    <TextBox x:Name="TextBoxAantalWooneenheden" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                    <CheckBox x:Name="CheckBoxRondleiding" Grid.Row="1" Grid.Column="1" Margin="5"/>
                    <CheckBox x:Name="CheckBoxShowwoning" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="TextBoxArchitecturaleScore" Grid.Row="3" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                    <CheckBox x:Name="CheckBoxSamenwerkingErfgoed" Grid.Row="4" Grid.Column="1" Margin="5"/>
                </Grid>
            </TabItem>

            <!-- Groene Ruimte -->
            <TabItem Header="Groene Ruimte">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Oppervlakte (m²):" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Biodiversiteitsscore:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Aantal wandelpaden:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Is opgenomen in wandelroute:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Beoordeling bezoekers:" VerticalAlignment="Center" Margin="5"/>

                    <TextBox x:Name="TextBoxOppervlakte" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                    <TextBox x:Name="TextBoxBiodiversiteit" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                    <TextBox x:Name="TextBoxAantalWandelpaden" Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                    <CheckBox x:Name="CheckBoxWandelroute" Grid.Row="4" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="TextBoxBeoordelingBezoekers" Grid.Row="5" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                </Grid>
            </TabItem>

            <TabItem Header="Partners">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="237*"/>
                        <ColumnDefinition Width="497*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid av:ItemsSource="{av:SampleData ItemCount=5}" Grid.ColumnSpan="3" Margin="0,0,0,-220" Grid.RowSpan="6"/>

                </Grid>
            </TabItem>

            <TabItem Header="Woonvormen">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="237*"/>
                        <ColumnDefinition Width="497*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid av:ItemsSource="{av:SampleData ItemCount=5}" Grid.ColumnSpan="3" Margin="0,0,0,-220" Grid.RowSpan="6"/>

                </Grid>
            </TabItem>

            <TabItem Header="Faciliteiten">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="237*"/>
                        <ColumnDefinition Width="497*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid av:ItemsSource="{av:SampleData ItemCount=5}" Grid.ColumnSpan="3" Margin="0,0,0,-220" Grid.RowSpan="6"/>

                </Grid>
            </TabItem>

        </TabControl>

        <ComboBox Margin="200,35,29,19" x:Name="ComboBoxExportOptions" Grid.Row="3" Grid.Column="0" Text="Exporteer naar..." IsEditable="True" IsReadOnly="True">
            <ComboBoxItem Content=".pdf"/>
            <!-- TODO: click event? programma/code moet kunnen weten wat die moet exporten -->
            <ComboBoxItem Content=".csv"/>
        </ComboBox>

        <Button Grid.Row="3" x:Name="ButtonPrintFiche" Content="Export" FontSize="15" Margin="30,35,200,19" Grid.Column="1" Click="ButtonPrintFiche_Click"/>
    </Grid>
</Window>