<Window x:Class="JobInterviewUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobInterviewUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="HR Medewerkers" Margin="5"/>
        <DataGrid Grid.Row="1" Name="DataGridHRMedewerkers" Margin="5" SelectionMode="Single" IsReadOnly="True">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New" Click="MenuItemInterview_Click"/>
                    <MenuItem Header="Update"/>
                    <MenuItem Header="Delete"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <TextBlock Grid.Row="2" Text="Interviews" Margin="5"/>
        <DataGrid Grid.Row="3" Name="DataGridInterviews" Margin="5" SelectionMode="Single" IsReadOnly="True">
            
        </DataGrid>
    </Grid>
</Window>
